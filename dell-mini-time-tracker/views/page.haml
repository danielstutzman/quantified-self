%html
  %head
    %link{:href => "stylesheet.css", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "/json2.js", :type => "text/javascript"}
    %script
      != "var auto_completions = #{JSON.dump(AutoCompletion.all.map { |a| { 'category' => a.category, 'intention' => a.intention } })};"
    %script{:src => "/application.js", :type => "text/javascript"}
  %body
    %a#unfocus{:href => "#"}
    %form
      #color-wash
        #message
        #has-intention-or-not
          %textarea#intention(placeholder='Declare an intention')
          %br
          %span#duration-so-far 0
          min out of
          %input#intended-duration(type='text')
          min
          %br
          %select#category
            %option
            - Category.all.each do |category|
              %option= category.category
      #activity-list
